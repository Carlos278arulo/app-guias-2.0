<div class="guia1">
  <div class="content-guia1">
    <h1>Sistema de Gestión de Asignaturas uwu</h1>
    <form action="/subir" method="POST" enctype="multipart/form-data">
      <label for="carrera">Carrera:</label>
      <input type="text" id="carrera" name="carrera" required>

      <label for="asignatura">Asignatura:</label>
      <input type="text" id="asignatura" name="asignatura" required>

      <label for="grupo">Grupo:</label>
      <input type="text" id="grupo" name="grupo" required>

      <label for="num_estudiantes">Número de estudiantes:</label>
      <input type="number" id="num_estudiantes" name="num_estudiantes" required>

      <label for="archivo">Archivo (DOC):</label>
      <input type="file" id="archivo" name="archivo" accept=".doc,.docx" required>

      <button type="submit">Subir Archivo</button>
    </form>
    <h2>Listado de Guías</h2>
    <form method="GET" action="/archivos">
      <button type="submit">Realizar Consulta</button>
    </form>
    <div style="overflow-x: auto; width: 100%;">
      <table style="width: 100%; white-space: nowrap; font-size: 16px;">
        <thead>
          <tr>
            <th>ID de Asignatura</th>
            <th>Carrera</th>
            <th>Asignatura</th>
            <th>Grupo</th>
            <th>Número de Estudiantes</th>
            <th>Acciones</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each consulta}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.carrera}}</td>
            <td>{{this.asignatura}}</td>
            <td>{{this.grupo}}</td>
            <td>{{this.num_estudiantes}}</td>
            <td>
              <form method="POST" action="/guias/{{this._id}}?_method=DELETE">
                <button type="submit">Eliminar</button>
              </form>
            </td>
            <td><a href="/descargar/{{this._id}}">Descargar Guía</a></td>


          </tr>
          {{/each}}
        </tbody>
      </table>
      
    </div>
  </div>
</div>